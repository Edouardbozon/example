{
  "name": "@marblejs/example",
  "version": "1.0.0",
  "description": "Example project written using Marble.js framework",
  "main": "dist/index.js",
  "scripts": {
    "heroku-prebuild": "cp ./src/config/env.ts.dist ./src/config/env.ts",
    "heroku-postbuild": "yarn db:seed",
    "postinstall": "yarn build && yarn test",
    "build": "tsc",
    "start": "yarn start:prod",
    "start:dev": "ts-node --project tsconfig.json src/index.ts",
    "start:prod": "node dist/index.js",
    "watch": "nodemon --watch src --ext ts --ignore '*.spec.ts' --exec yarn start:dev",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "jest --expand --forceExit",
    "test:coverage": "jest --expand --coverage --forceExit",
    "test:watch": "jest --expand --onlyChanged --watch",
    "db:seed": "yarn ts-node src/seed/index.ts"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marblejs/marble-example.git"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.7.0",
    "npm": ">= 5.0.0"
  },
  "keywords": [
    "Functional",
    "Reactive",
    "RxJS",
    "Marble.js"
  ],
  "author": "Jozef Flakus <hello@jflakus.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marblejs/marble-example/issues"
  },
  "homepage": "https://github.com/marblejs/marble-example#readme",
  "dependencies": {
    "@marblejs/core": "^1.0.0-rc.3",
    "@marblejs/middleware-body": "^1.0.0-rc.3",
    "@marblejs/middleware-joi": "^1.0.0-rc.3",
    "@marblejs/middleware-logger": "^1.0.0-rc.3",
    "@types/chalk": "^2.2.0",
    "@types/faker": "^4.1.4",
    "@types/mongoose": "^5.2.12",
    "@types/node": "^10.1.2",
    "@types/uuid": "^3.4.4",
    "chalk": "^2.4.1",
    "faker": "^4.1.0",
    "mongoose": "^5.2.14",
    "reflect-metadata": "^0.1.12",
    "rxjs": "~6.2.2",
    "typegoose": "^5.2.1",
    "typescript": "~3.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/mock-fs": "^3.6.30",
    "@types/supertest": "^2.0.4",
    "husky": "^0.14.0",
    "jest": "^23.5.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.17.3",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.1",
    "tsc": "~1.20150623.0",
    "tslint": "~5.9.1",
    "typescript": "~3.0.1"
  }
}
