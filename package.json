{
  "name": "@marblejs/example",
  "version": "1.0.0",
  "description": "Example project written using Marble.js framework",
  "main": "dist/index.js",
  "scripts": {
    "heroku-prebuild": "cp ./src/config/env.ts.dist ./src/config/env.ts",
    "heroku-postbuild": "yarn db:seed",
    "postinstall": "if-env IS_HEROKU=true && yarn build || (yarn build && yarn docker && yarn test)",
    "build": "tsc && yarn doc",
    "start": "yarn start:prod",
    "start:dev": "ts-node --project tsconfig.json src/index.ts",
    "start:prod": "node dist/index.js",
    "watch": "nodemon --watch src --ext ts --ignore '*.spec.ts' --exec yarn start:dev",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "pretest": "yarn lint",
    "test": "if-env TRAVIS=true && jest --expand --forceExit --coverage || jest --expand --coverage",
    "test:watch": "jest --expand --onlyChanged --watch",
    "docker": "docker-compose -f .docker/docker-compose.yml up --build -d",
    "doc": "aglio -i src/api/index.apib -o dist/docs.html -t flatly --theme-template triple",
    "doc:watch": "aglio -i src/api/index.apib -o dist/docs.html -t flatly --theme-template triple -s -p 3001",
    "db:seed": "yarn ts-node src/seed/index.ts"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marblejs/marble-example.git"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.7.0",
    "npm": ">= 5.0.0"
  },
  "keywords": [
    "Functional",
    "Reactive",
    "RxJS",
    "Marble.js"
  ],
  "author": "Jozef Flakus <hello@jflakus.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marblejs/marble-example/issues"
  },
  "homepage": "https://github.com/marblejs/marble-example#readme",
  "dependencies": {
    "@marblejs/core": "^1.2.1",
    "@marblejs/middleware-body": "^1.2.1",
    "@marblejs/middleware-joi": "^1.2.1",
    "@marblejs/middleware-jwt": "1.2.1",
    "@marblejs/middleware-logger": "^1.2.1",
    "@types/faker": "^4.1.4",
    "@types/joi": "^13.6.0",
    "@types/mongoose": "^5.2.12",
    "@types/node": "^10.1.2",
    "@types/uuid": "^3.4.4",
    "chalk": "^2.4.1",
    "faker": "^4.1.0",
    "mongoose": "^5.2.14",
    "reflect-metadata": "^0.1.12",
    "rxjs": "~6.2.2",
    "typegoose": "^5.2.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/mock-fs": "^3.6.30",
    "@types/supertest": "^2.0.4",
    "aglio": "^2.3.0",
    "aglio-theme-onlicar": "^1.6.4",
    "husky": "^0.14.0",
    "if-env": "^1.0.4",
    "jest": "^23.5.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.17.3",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "~23.1.3",
    "ts-node": "^7.0.1",
    "tslint": "~5.9.1",
    "typescript": "~3.1.1"
  }
}
